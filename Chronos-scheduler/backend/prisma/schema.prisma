// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id          Int          @id @default(autoincrement())
  mark        String       @unique
  customer    String
  leaseNumber String
  type        String
  level2Type  String
  qualDue     DateTime
  priority    String
  status      String       @default("unscheduled")
  reason      String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]

  @@index([status])
  @@index([customer])
  @@index([priority])
}

model Shop {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  city        String
  code        String       @unique
  capacity    Int
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  assignments Assignment[]

  @@index([code])
}

model Assignment {
  id        Int      @id @default(autoincrement())
  carId     Int
  shopId    Int
  month     DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  car       Car      @relation(fields: [carId], references: [id], onDelete: Cascade)
  shop      Shop     @relation(fields: [shopId], references: [id], onDelete: Cascade)

  @@unique([carId, month])
  @@index([shopId, month])
  @@index([month])
}

model Scenario {
  id        Int      @id @default(autoincrement())
  name      String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HistoryEntry {
  id        Int      @id @default(autoincrement())
  action    String
  data      Json
  createdAt DateTime @default(now())
}
